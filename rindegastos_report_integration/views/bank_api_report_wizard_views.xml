<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="bank_api_report_wizard_form" model="ir.ui.view">
        <field name="name">bank.api.report.wizard.form</field>
        <field name="model">bank.api.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="since"/>
                    <field name="until"/>
                    <field name="journal_id"/>
                </group>
                <footer>
                    <button name="action_import_reports" string="Importar" type="object" class="oe_highlight"/>
                    <button string="Cancelar" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_bank_api_report_wizard" model="ir.actions.act_window">
        <field name="name">Importar Reportes de Rindegastos</field>
        <field name="res_model">bank.api.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>