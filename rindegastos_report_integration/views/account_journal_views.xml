<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_journal_inherit_rindegastos" model="ir.ui.view">
        <field name="name">account.journal.inherit.rindegastos</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type']" position="after">
                <field name="bank_feed_type"/>
                <field name="employee_id" modifiers='{"invisible": [["bank_feed_type", "!=", "rindegastos"]], "required": [["bank_feed_type", "=", "rindegastos"]]}'/>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_open_rindegastos_report_wizard" type="object" string="Importar Reportes de Rindegastos" class="oe_stat_button" icon="fa-download" modifiers='{"invisible": [["bank_feed_type", "!=", "rindegastos"]]}'/>
            </xpath>
        </field>
    </record>
</odoo>