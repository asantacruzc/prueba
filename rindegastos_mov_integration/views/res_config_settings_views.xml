<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_inherit_rindegastos" model="ir.ui.view">
            <field name="name">res.config.settings.inherit.rindegastos</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//app[@name='general_settings']" position="inside">
                    <h2><span searchabletext="Rindegastos Integration">Integracion Rindegastos</span></h2>
                    <div class="row mt16 o_settings_container">
                        <div class="o_setting_box col-12 col-lg-6 o_searchable_setting">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label"><span searchabletext="Rindegastos Token">Rindegastos Token</span></span>
                                <div class="text-muted"><span searchabletext="API token for Rindegastos integration">Rindegastos Api Token</span></div>
                                <div class="content-group mt16">
                                    <label for="rindegastos_tokenid" class="col-5 col-lg-5 o_light_label"/>
                                    <field name="rindegastos_tokenid" placeholder="Ingrese el token de API de Rindegastos" help="Obtenga el token desde su cuenta de Rindegastos para habilitar la sincronización automática de reports y expenses."/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>